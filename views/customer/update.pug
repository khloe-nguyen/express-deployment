extends ../layout

block content
  div.container
    div.row.justify-content-center
      div.col-md-6
        h1.text-center Update Customer 
        form(method="post", action=`/customer/update/${customer._id}`, enctype="multipart/form-data")
          div.form-group
            label(for='Id') ID
            input.form-control(readonly='readonly', name='id', value=customer._id) 
          div.form-group
            label(for='email') Email
            input#email.form-control(name='email', value=customer.email)
          div.form-group
            label(for='password') Password 
            input#password.form-control(name='password', type='password', value=customer.password)
          div.form-group
            label(for='fullname') Fullname 
            input#fullname.form-control(name='fullname', value=customer.fullname)
          - if (customer.image)
            div.form-group
              img(src=`/images/${customer.image}`, class='img-fluid', style='max-width: 100px; height: auto;')
          div.form-group
            label(for='image') Image
            input#image.form-control-file(type='file', name='image')
          div.text-center
            input.btn.btn-primary(type='submit', value='Update')